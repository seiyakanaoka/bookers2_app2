<div class="user">
          <h1>User info</h1>
          <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", class: "rounded-circle" %>
          <table class="table mt-3">
            <tbody>
              <tr>
                <th>name</th><th><%= user.name %></th>
              </tr>
              <tr>
                <th>introduction</th><th><%= user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <%= link_to(edit_user_path(user), class: "btn btn-outline-secondary btn-block text-dark") do %>Edit<% end %>
        </div>

        <div class="new-book">
          <h1>New book</h1>
          <%= form_with model:book, local: true do |f| %>
            <div class="field">
              <%= f.label "Title" %><br />
              <%= f.text_field :title %>
            </div>
            
            <div class="field mt-3 ">
              <%= f.label "Opinion" %><br />
              <%= f.text_area :body %>
              <%= f.submit 'Create Book', class: "btn btn-success mt-3" %>
            </div>
          <% end %>
        </div>
