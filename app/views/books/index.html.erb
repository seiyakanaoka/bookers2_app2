<div class="user">
  <h1>User info</h1>
</div>

<div class="new-book">
  <h1>New book</h1>
  <%= form_with model:@book, local: true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div class="books">
  <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      
    
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td></td>
            <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>