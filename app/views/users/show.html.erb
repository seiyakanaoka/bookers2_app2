<div class="container">
  <div class="row">
    
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="mx-auto col-md-offset-1 col-md-8">
      <div class="books">
        <h1>Books</h1>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Favorite</th>
                <th>User</th>
                <th>Title</th>
                <th>Opinion</th>
                <th>Comment</th>
              </tr>
            </thead>
      
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>❤<%= book.favorites.count %>いいね</td>
                  <td><%= link_to user_path(book.user_id) do %><%= attachment_image_tag book.user, :profile_image, size: "50x50" %><% end %></td>
                  <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
                  <td><%= book.body %></td>
                  <td><%= book.book_comments.count %>コメント</td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
    
  </div>
</div>